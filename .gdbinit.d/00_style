# GDB config
# - use with: https://github.com/cyrus-and/gdb-dashboard

dashboard -style divider_fill_char_primary '─'
dashboard -style divider_fill_style_primary '1;34'
dashboard -style divider_fill_char_secondary '─'
dashboard -style divider_fill_style_secondary '1;37'

dashboard -style divider_label_style_on_primary '1;93'
dashboard -style divider_label_style_off_primary '33'
dashboard -style divider_label_style_on_secondary '1;92'
dashboard -style divider_label_style_off_secondary '32'

dashboard -style divider_label_skip 3
dashboard -style divider_label_margin 1
dashboard -style divider_label_align_right False

dashboard -style style_selected_1 '1;96'
dashboard -style style_selected_2 '96'
dashboard -style style_low '90'
dashboard -style style_high '37'
dashboard -style style_error '91'

dashboard -style syntax_highlighting 'vim'
dashboard -style prompt '{status}'
dashboard -style prompt_not_running '\\[\\e[1;33m\\]>\\[\\e[1;93m\\]>\\[\\e[0m\\]'
dashboard -style prompt_running '\\[\\e[1;31m\\]>\\[\\e[1;91m\\]>\\[\\e[0m\\]'
